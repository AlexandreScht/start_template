{
  "name": "@chesser/server",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "scripts": {
    "isolated-install": "pnpm -w install:server",
    "dev": "cross-env NODE_ENV=development nodemon",
    "start": "node dist/src/server/index.js",
    "reset": "ts-node src/commands/resetDist.ts",
    "lint": "eslint .",
    "test": "jest --forceExit --detectOpenHandles --",
    "lint:fix": "eslint . --fix",
    "generate:key": "node generatePairSync",
    "build": "swc src -d dist --source-maps --copy-files",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "seed": "kysely seed run",
    "codegen": "kysely-codegen",
    "migrate": "tsx src/database/migrate.ts --trml",
    "migrate:run": "ts-node -r tsconfig-paths/register src/database/migrate.conf.ts",
    "rollback": "kysely migrate down",
    "make:seed": "kysely seed make",
    "make:migration": "kysely migrate make",
    "generate:cert": "rimraf --glob \"src/certificates/*\" && mkcert -key-file src/certificates/privkey.pem -cert-file src/certificates/fullchain.pem localhost 127.0.0.1 ::1"
  },
